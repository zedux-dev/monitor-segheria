{
    "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
    "applicationId": "js.neutralino.sample",
    "version": "1.0.0",
    "defaultMode": "browser",
    "port": 0,
    "documentRoot": "/frontend/dist/",
    "url": "/",
    "enableServer": true,
    "enableNativeAPI": true,
    "tokenSecurity": "one-time",
    "logging": {
        "enabled": true,
        "writeToLogFile": true
    },
    "nativeAllowList": [
        "app.*",
        "filesystem.*",
        "os.*"
    ],
    "modes": {
        "window": {
            "title": "Segheria",
            "width": 800,
            "height": 500,
            "minWidth": 400,
            "minHeight": 200,
            "center": true,
            "fullScreen": false,
            "alwaysOnTop": false,
            "enableInspector": true,
            "borderless": false,
            "maximize": false,
            "hidden": false,
            "resizable": true,
            "exitProcessOnClose": true
        },
        "browser": {
            "globalVariables": {
                "TEST": "Test value browser"
            }
        },
        "chrome": {
            "width": 800,
            "height": 500,
            "args": "--user-agent=\"Neutralinojs chrome mode\""
        }
    },
    "cli": {
        "binaryName": "Segheria",
        "resourcesPath": "/frontend/",
        "binaryVersion": "5.4.0",
        "clientVersion": "5.4.0",
        "frontendLibrary": {
            "patchFile": "frontend/index.html",
            "devUrl": "http://localhost:8001",
            "projectPath": "/frontend/",
            "initCommand": "npm install",
            "devCommand": "npm run dev",
            "buildCommand": "npm run build"
        }
    },
    "buildScript": {
        "mac": {
            "architecture": [
                "x64",
                "arm64",
                "universal"
            ],
            "minimumOS": "10.13.0",
            "appName": "Segheria",
            "appBundleName": "segheria",
            "appIdentifier": "com.davidenadin.segheria"
        },
        "win": {
            "architecture": [
                "x64"
            ],
            "appName": "Segheria"
        },
        "linux": {
            "architecture": [
                "x64",
                "arm64",
                "armhf"
            ],
            "appName": "Segheria",
            "appPath": "/usr/share/segheria"
        }
    }
}